@model GenomicEncryption.Models.Classes.GenomicCodes

@{
    ViewBag.Title = "KodEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    h1 {
        text-align: center;
        color: black;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        margin-bottom: 30px;
        font-size: 60px;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 10px;
        width: 105%;
        margin-bottom: 20px; /* Alt boşluk */
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }
</style>
<h1>Veri Ekleme</h1>
<div class="card">
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col">
                    <label for="deger">Genomik Kod</label>
                    @Html.TextBoxFor(m => m.DEGER, new { @class = "form-control", @name = "deger", @required = true })
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label for="name">Genomik Kodları Temsil Eden Ad</label>
                    @Html.TextBoxFor(m => m.AD, new { @class = "form-control", @name = "name", @required = true })
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-3">
                    <button class="btn btn-primary w-50"> Ekle</button>
                </div>
            </div>
        </div>
    </div>
    <br />

</div>
<a href="/Home/Index/" class="btn btn-danger">GERİ</a>
<a href="/Home/VeriTabaniGoruntule" class="btn btn-danger">Genetik Kodları Görüntüle</a>


