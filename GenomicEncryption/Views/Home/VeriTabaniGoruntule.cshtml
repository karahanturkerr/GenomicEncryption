@using GenomicEncryption.Models.Classes
@model List<GenomicCodes>
@{
    ViewBag.Title = "VeriTabaniGoruntule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/css")

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    h1 {
        text-align: center;
        color: black;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        margin-bottom: 30px;
        font-size: 60px;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 10px;
        width: 105%;
        margin-bottom: 20px; /* Alt boşluk */
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }
</style>
<h1>...Kayıtlı Veriler...</h1>
<div class="card">
    <div class="card-body">
        <table class="table table-bordered ">
            <tr>
                <th>ID</th>
                <th>Genomik Kodlar</th>
                <th>Genomik Kodları Temsil Eden Ad </th>

            </tr>
            <tbody>
                @foreach (var ktgr in Model)
                {
                    <tr>
                        <th>@ktgr.ID</th>
                        <td>@(ktgr.DEGER.Length > 50 ? ktgr.DEGER.Substring(0, 50) + "..." : ktgr.DEGER)</td>
                        <td>@ktgr.AD</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<a href="/Home/Index/" class="btn btn-danger">GERİ</a>

